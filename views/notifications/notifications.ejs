<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css">
    <title>Notifications</title>
    <link rel="icon" type="image/png" href="/img/LogoHabitree.png">
    <link rel="stylesheet" href ="/css/notifications/notifications.css">
</head>
<body>
    <div class="content">
    <%- include('../partials/navbar') %>
        <div class="Dashboard_content">
            <div class="Dashboard__title-container">
                <h1 class="Dashboard__title">Notifications</h1>
                <div class="container__button">
                    <button class="instrument-sans-bold header__button">Add</button>
                </div>
            </div>
            <div class="table-container instrument-sans-regular">
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Date</th>
                            <th>Titulo</th>
                            <th>Description</th>
                            <th>Channel</th>
                            <th>Category</th>
                            <th>Active</th>
                            <th class="actions">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (notifications && notifications[0] && notifications[0][0] && notifications[0][0].IDNotification) { %>
                            <% notifications[0].forEach(function(notification) { %>
                                <tr>
                                    <td><%= notification.IDNotification %></td>
                                    <td><%= notification.dateCreated %></td>
                                    <td><%= notification.titulo %></td>
                                    <td><%= notification.description %></td>
                                    <td><%= notification.canal %></td>
                                    <td><%= notification.category %></td>
                                    <td><%= notification.isActive ? 'SÃ­' : 'No' %></td>
                                    <td class="actions"><button class="table__button">Manage</button></td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="8" style="text-align:center;">No notifications available</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div id="modal-root"></div>
    <div id="backdrop" class="backdrop"></div>
    <script src="/js/notifications/editNotifications.js" defer></script>
    <script src="/js/notifications/addNotifications.js" defer></script>
</body>
</html>
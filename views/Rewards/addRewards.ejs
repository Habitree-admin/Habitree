<div id="modal" class="modal">
  <h2 id="modal-title">Add Reward</h2>

  <form id="form-add-reward" action="/rewards/save" method="POST">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

    <!-- ID -->
    <label for="id">ID Reward:</label>
    <div class="input-container">
      <input type="text" id="id" name="IDReward" value="<%= IDReward %>" required />
      <span id="id-readonly-msg" style="display:none; color: gray; font-size: 12px;">ID cannot be changed</span>
    </div>

    <!-- Name -->
    <label for="name">Name:</label>
    <div class="input-container">
      <input type="text" id="name" name="name" value="<%= name %>" required />
    </div>

    <!-- Value / Price -->
    <label for="value">Price:</label>
    <div class="input-container">
      <input type="number" id="value" name="value" value="<%= value %>" required />
    </div>

    <!-- Category -->
    <label for="type">Category:</label>
    <div class="input-container">
      <input type="text" id="type" name="type" value="<%= type %>" required />
    </div>

    <!-- State -->
    <label for="status">State:</label>
    <div class="input-container">
      <select id="status" name="status" required>
        <option value="1" <%= available == 1 ? "selected" : "" %>>Available</option>
        <option value="0" <%= available == 0 ? "selected" : "" %>>Unavailable</option>
      </select>
    </div>

    <!-- Description -->
    <label for="description">Description:</label>
    <div class="input-container">
      <textarea id="description" name="description" required><%= description %></textarea>
    </div>

    <!-- Buttons -->
    <div class="button-container">
      <button id="add-edit-btn" type="submit">Add</button>
      <button id="delete-btn" type="button" style="display:none;">Delete</button>
      <button id="closeModal" type="button" class="close-modal">Close</button>
    </div>
  </form>
</div>
